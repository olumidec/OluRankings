@using Microsoft.AspNetCore.Identity
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - OluRankings</title>

    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <!-- Sticky Header -->
    <header class="site-header">
        <div class="container navbar">
            <div class="brand">OluRankings</div>

            <nav class="nav-links">
                <a asp-page="/Rankings/Index">Rankings</a>
                <a asp-page="/Athletes/Index">Athletes</a>
                <a asp-page="/News/Index">Top News</a>
                <a asp-page="/Submit/Index">Submit</a>
            </nav>

            <div class="cta">
                <a class="btn btn--ghost" asp-area="Identity" asp-page="/Account/Login">Login</a>
                <a class="btn" asp-area="Identity" asp-page="/Account/Register">Register</a>
            </div>
        </div>
    </header>

    <!-- Page -->
    <main class="container section">
        @RenderBody()
    </main>

    <footer class="container footer">
        <span>&copy; @DateTime.UtcNow.Year OluRankings. All rights reserved.</span>
    </footer>

    <script src="~/js/main.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
