@using Microsoft.AspNetCore.Identity
@inject SignInManager<OluRankings.Models.ApplicationUser> SignInManager
@inject UserManager<OluRankings.Models.ApplicationUser> UserManager
@{
    var title = ViewData["Title"] as string ?? "OluRankings";
}
<!DOCTYPE html>
<html lang="en" data-theme="dark">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@title - OluRankings</title>
    <link rel="preconnect" href="https://fonts.googleapis.com"/>
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin/>
    <link rel="icon" type="image/png" href="~/images/olurankings-logo.png" />
    <link rel="apple-touch-icon" href="~/images/olurankings-logo.png" />
    <meta name="theme-color" content="#0b0d11">
     <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700;800&display=swap" rel="stylesheet"/>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <header class="nav-wrap">
        <div class="nav-inner">
            <a class="brand" asp-page="/Index" aria-label="OluRankings Home">
                <img src="~/images/olurankings-logo.png" alt="OluRankings" class="brand-logo" />
                <span>OluRankings</span>
            </a>


            <nav class="nav-links" aria-label="Primary">
                <a asp-page="/Rankings/Index">Rankings</a>
                <a asp-page="/Athletes/Index">Athletes</a>
                <a asp-page="/News/Index">Top News</a>
                <a asp-page="/Submit/Index">Submit</a>
                @if (User.IsInRole("Admin"))
                {
                    <a asp-page="/Admin/Index">Admin</a>
                }
            </nav>

            <div class="nav-cta">
                <button id="themeToggle" class="icon-btn" aria-label="Toggle theme">
                    <svg viewBox="0 0 24 24" width="20" height="20" fill="currentColor"><path d="M21.64 13a1 1 0 0 0-1.05-1.27A8 8 0 0 1 12.24 3a1 1 0 0 0-1.26-1A10 10 0 1 0 22 14.76a1 1 0 0 0-.36-1.76z"/></svg>
                </button>

                @if (SignInManager.IsSignedIn(User))
                {
                    <a class="btn ghost" asp-page="/Account/Manage/Index" asp-area="Identity">Account</a>
                    <form class="inline-form" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/Index")" method="post">
                        <button class="btn solid" type="submit">Logout</button>
                    </form>
                }
                else
                {
                    <a class="btn ghost" asp-area="Identity" asp-page="/Account/Login">Login</a>
                    <a class="btn solid" asp-area="Identity" asp-page="/Account/Register">Register</a>
                }
            </div>

            <button class="hamburger" id="hamburger" aria-label="Open menu">
                <span></span><span></span><span></span>
            </button>
        </div>
    </header>

    <main class="page">
        @RenderBody()
    </main>

    <footer class="site-footer">
        <div class="footer-inner">
            <div class="f-brand">
                <span class="brand-dot"></span> OluRankings
                <div class="muted">UK Youth Rankings. Verified profiles. Stats that matter.</div>
            </div>
            <div class="f-cols">
                <div>
                    <div class="f-title">Explore</div>
                    <a asp-page="/Rankings/Index">Rankings</a>
                    <a asp-page="/Athletes/Index">Athletes</a>
                    <a asp-page="/News/Index">Top News</a>
                </div>
                <div>
                    <div class="f-title">Contribute</div>
                    <a asp-page="/Submit/Index">Submit Profile</a>
                    <a asp-page="/Teams/Manage">Teams</a>
                </div>
                <div>
                    <div class="f-title">Legal</div>
                    <a href="#">Terms</a>
                    <a href="#">Privacy</a>
                </div>
            </div>
        </div>
        <div class="footer-bar">Â© @DateTime.UtcNow.Year OluRankings. All rights reserved.</div>
    </footer>

    <script src="~/js/main.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
