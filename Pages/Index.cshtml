@page
@{
    ViewData["Title"] = "Home";
}

<div class="container">
  <!-- HERO -->
  <header class="hero">
    <video autoplay loop muted playsinline>
      <source src="/videos/hero-loop.mp4" type="video/mp4" />
    </video>
    <div class="hero-inner">
      <h1>Official UK Youth Rankings</h1>
      <p>Verified stats, athlete profiles, and showcase visibility â€” starting with Basketball (U14/U16).</p>
      <div class="hero-actions">
        <a class="btn" asp-page="/Rankings/Index">View Rankings</a>
        <a class="btn btn--ghost" asp-page="/Athletes/Create">Submit Profile</a>
      </div>
    </div>
  </header>

  <!-- Feature rows -->
  <section class="section">
    <div class="feature card">
      <h3>Rankings</h3>
      <p>Search by age group, position, and region. Transparent methodology and versioned updates.</p>
      <a asp-page="/Rankings/Index">Explore</a>
    </div>
  </section>

  <section class="section">
    <div class="feature card">
      <h3>Athlete Profiles</h3>
      <p>Showcase measurables, highlights, and verified badges for trusted data.</p>
      <a asp-page="/Athletes/Index">Browse</a>
    </div>
  </section>

  <section class="section">
    <div class="feature card">
      <h3>Submit &amp; Verify</h3>
      <p>Submit your profile or stats. Our verification flow keeps the platform fair and credible.</p>
      <a asp-page="/Submit/Index">Start</a>
    </div>
  </section>
</div>
