@page
@{
    ViewData["Title"] = "Official UK Youth Rankings";
}

<section class="hero">
  <div class="hero__copy">
    <p class="eyebrow">BETA • VERIFIED PLAYER CARDS</p>
    <h1>European-style scouting, built for UK grassroots.</h1>
    <p class="muted">
      Create credible player cards, verify real evidence, and help recruiters find talent faster — safely and privately.
    </p>
    <div class="hero__cta">
      <a class="btn btn--primary" asp-page="/Athletes/Index">Explore Athletes</a>
      <a class="btn btn--ghost" asp-page="/PlayerCards/Details" asp-route-id="00000000-0000-0000-0000-000000000000">Sample Card</a>
    </div>
  </div>

  <div class="hero__media">
    <div class="card card--media shimmer">
      <!-- Put your logo or hero image here -->
      <img src="~/images/hero-logo-or-photo.jpg" alt="OluRankings" />
    </div>
  </div>
</section>

<section class="grid grid--3 gap-lg">
  <article class="card hover-lift">
    <h3>Rankings</h3>
    <p>Filter by position, height, age, location and verification.</p>
    <a class="btn btn--ghost" asp-page="/Rankings/Index">Explore</a>
  </article>
  <article class="card hover-lift">
    <h3>Athlete Profiles</h3>
    <p>Private by default, verified by reviewers, surfaced with badges.</p>
    <a class="btn btn--ghost" asp-page="/Athletes/Index">Browse</a>
  </article>
  <article class="card hover-lift">
    <h3>Submit & Verify</h3>
    <p>Players, parents and coaches submit; verifiers confirm with evidence.</p>
    <a class="btn btn--ghost" asp-page="/Submit/Index">Start</a>
  </article>
</section>

<section class="section">
  <div class="section-head">
    <h2>Trending Highlights</h2>
    <div class="muted">Pulled from <code>/wwwroot/data/highlights.json</code></div>
  </div>

  <div id="highlightsGrid" class="grid highlights"></div>

  <!-- Video Modal -->
  <dialog id="videoModal" class="modal">
    <button class="modal-close" aria-label="Close">&times;</button>
    <div class="modal-body">
      <div class="modal-player" id="modalPlayer"></div>
      <div id="modalTitle" class="modal-title"></div>
    </div>
  </dialog>
</section>
