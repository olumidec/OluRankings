@page
@model OluRankings.Pages.Admin.Rankings.CreateModel
@{
    ViewData["Title"] = "Create Ranking";
}
<h1>Create Ranking</h1>

<form method="post" class="grid gap-3 md:grid-cols-2">
  <label>List (Publisher) <input asp-for="NewRanking.Publisher" /></label>
  <label>Sport <input asp-for="NewRanking.Sport" /></label>
  <label>Age Group <input asp-for="NewRanking.AgeGroup" /></label>
  <label>Position (optional) <input asp-for="NewRanking.Position" /></label>
  <label>Region (optional) <input asp-for="NewRanking.Region" /></label>
  <label>Period <input asp-for="NewRanking.Period" /></label>
  <div class="md:col-span-2 mt-3">
    <button class="btn btn-primary" type="submit">Create</button>
    <a class="btn" asp-page="Index">Back</a>
  </div>
</form>
