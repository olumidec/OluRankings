@page
@model OluRankings.Pages.Admin.Users.IndexModel
@{
    ViewData["Title"] = "Users";
}

<h1 class="mb-4">Users</h1>

<table class="table table-dark table-striped align-middle">
    <thead>
    <tr>
        <th>Email</th>
        <th>Email Confirmed</th>
        <th>Lockout</th>
        <th>Roles</th>
        <th style="width: 420px;">Actions</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var u in Model.Users)
    {
        <tr>
            <td>@u.Email</td>
            <td>@u.EmailConfirmed</td>
            <td>@(u.LockoutEnd is not null ? $"Locked (until {u.LockoutEnd})" : "Active")</td>
            <td>@string.Join(", ", u.Roles)</td>
            <td>
                <form method="post" asp-page-handler="ConfirmEmail" class="d-inline">
                    <input type="hidden" name="UserId" value="@u.Id" />
                    <button class="btn btn-sm btn-outline-success">Confirm email</button>
                </form>

                <form method="post" asp-page-handler="ToggleLock" class="d-inline ms-2">
                    <input type="hidden" name="UserId" value="@u.Id" />
                    <button class="btn btn-sm btn-outline-warning">Toggle lock</button>
                </form>

                <form method="post" asp-page-handler="AddRole" class="d-inline ms-2">
                    <input type="hidden" name="UserId" value="@u.Id" />
                    <input name="RoleName" class="form-control form-control-sm d-inline" style="width:130px" placeholder="Role (e.g. Admin)" />
                    <button class="btn btn-sm btn-outline-primary ms-1">Add role</button>
                </form>

                <form method="post" asp-page-handler="RemoveRole" class="d-inline ms-2">
                    <input type="hidden" name="UserId" value="@u.Id" />
                    <input name="RoleName" class="form-control form-control-sm d-inline" style="width:130px" placeholder="Role to remove" />
                    <button class="btn btn-sm btn-outline-danger ms-1">Remove role</button>
                </form>
            </td>
        </tr>
    }
    </tbody>
</table>
