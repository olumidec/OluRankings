@page
@model OluRankings.Pages.Submit.IndexModel
@{
    ViewData["Title"] = "Submit Athlete Profile";
}

<section class="submit-wrap">
  <div class="submit-card">

    <div class="submit-head">
      <div>
        <h1>Submit Athlete Profile</h1>
        <p>
          Send player details + a highlight link. We review every submission before anything appears on the site.
        </p>
      </div>
    </div>

    @if (TempData["Message"] is string msg)
    {
      <div class="alert">@msg</div>
    }

    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <form method="post"
          asp-antiforgery="true"
          enctype="multipart/form-data"
          class="submit-form">

      <!-- Names -->
      <div class="submit-grid">
        <div class="submit-field">
          <label asp-for="FirstName">First name</label>
          <input asp-for="FirstName" autocomplete="given-name" required />
          <span asp-validation-for="FirstName" class="text-danger"></span>
        </div>

        <div class="submit-field">
          <label asp-for="LastName">Last name</label>
          <input asp-for="LastName" autocomplete="family-name" required />
          <span asp-validation-for="LastName" class="text-danger"></span>
        </div>
      </div>

      <!-- School / Region -->
      <div class="submit-grid">
        <div class="submit-field">
          <label asp-for="School">School</label>
          <input asp-for="School" />
          <span asp-validation-for="School" class="text-danger"></span>
        </div>

        <div class="submit-field">
          <label asp-for="Region">Region</label>
          <input asp-for="Region" placeholder="e.g., London / Midlands" />
          <span asp-validation-for="Region" class="text-danger"></span>
        </div>
      </div>

      <!-- Position / Age group -->
      <div class="submit-grid">
        <div class="submit-field">
          <label asp-for="Position">Position</label>
          <select asp-for="Position">
            <option value="Guard">Guard</option>
            <option value="Wing">Wing</option>
            <option value="Big">Big</option>
          </select>
          <span asp-validation-for="Position" class="text-danger"></span>
        </div>

        <div class="submit-field">
          <label asp-for="AgeGroup">Age group</label>
          <select asp-for="AgeGroup">
            <option value="U14">U14</option>
            <option value="U16">U16</option>
            <option value="U18">U18</option>
          </select>
          <span asp-validation-for="AgeGroup" class="text-danger"></span>
        </div>
      </div>

      <!-- Video URL -->
      <div class="submit-field">
        <label asp-for="VideoUrl">Highlight video URL</label>
        <input asp-for="VideoUrl" type="url" placeholder="YouTube / TikTok / Instagram link" />
        <div class="submit-help">Tip: YouTube “Unlisted” is ideal. Don’t upload raw video files.</div>
        <span asp-validation-for="VideoUrl" class="text-danger"></span>
      </div>

      <!-- Evidence upload -->
      <div class="submit-field">
        <label asp-for="Evidence">Identity evidence (passport/ID)</label>
        <input asp-for="Evidence" type="file" accept=".jpg,.jpeg,.png,.pdf" />
        <div class="submit-help">Accepted: JPG/PNG/PDF, max 10MB.</div>
        <span asp-validation-for="Evidence" class="text-danger"></span>
      </div>

      <!-- Consent -->
      <div class="submit-consent">
        <div class="submit-field">
          <label style="display:flex; gap:10px; align-items:flex-start;">
            <input asp-for="Consent" type="checkbox" required style="margin-top:3px;" />
            <span>I am the parent/guardian and consent to submit and publish this information.</span>
          </label>
          <span asp-validation-for="Consent" class="text-danger"></span>
        </div>
      </div>

      <!-- CAPTCHA (your existing styles already include .auth-captcha) -->
      <div class="auth-captcha">
        <partial name="~/Pages/Shared/_Captcha.cshtml" />
      </div>

      <div class="submit-actions">
        <button class="btn solid lg" type="submit">Submit</button>
      </div>
    </form>
  </div>
</section>

@section Scripts {
  <partial name="_ValidationScriptsPartial" />
}
