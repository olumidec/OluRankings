@page
@model OluRankings.Areas.Identity.Pages.Account.LoginModel
@{
    ViewData["Title"] = "Log in";
}

<section class="auth">
  <div class="auth-card">
    <div class="stack">
      <span class="badge">Secure sign-in</span>
      <h1>Welcome back</h1>
      <p class="muted">Sign in to manage profiles, submit stats, follow rankings, and bookmark athletes.</p>
    </div>

    <form id="account" method="post" class="stack" asp-route-returnUrl="@Model.ReturnUrl">
      <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

      <div class="form-row">
        <label class="label" asp-for="Input.Email">Email</label>
        <input class="input" asp-for="Input.Email" autocomplete="username" placeholder="you@example.com" />
        <span asp-validation-for="Input.Email" class="text-danger helper"></span>
      </div>

      <div class="form-row">
        <label class="label" asp-for="Input.Password">Password</label>
        <input id="Password" class="input" asp-for="Input.Password" autocomplete="current-password" placeholder="••••••••" />
        <span asp-validation-for="Input.Password" class="text-danger helper"></span>
      </div>

      <div class="form-actions">
        <label class="left">
          <input class="checkbox" asp-for="Input.RememberMe" />
          <span>@Html.DisplayNameFor(m => m.Input.RememberMe)</span>
        </label>
        <a id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a>
      </div>

      <!-- CAPTCHA (kept exactly as your project uses it) -->
      <div class="turnstile-wrapper">
        <partial name="~/Pages/Shared/_Captcha.cshtml" />
      </div>

      <button id="login-submit" type="submit" class="btn">Log in</button>

      <div class="helper" style="margin-top:.6rem">
        Don’t have an account? <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Create one</a> ·
        <a id="resend-confirmation" asp-page="./ResendEmailConfirmation">Resend confirmation</a>
      </div>
    </form>
  </div>
</section>

@section Scripts {
  <partial name="_ValidationScriptsPartial" />
}
