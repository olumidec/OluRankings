@page
@model OluRankings.Areas.Identity.Pages.Account.LoginModel
@{
    ViewData["Title"] = "Log in";
}

<section class="form-wrap">
  <div class="form-card">
    <h1 class="form-title">Welcome back</h1>
    <p class="form-sub">Sign in to manage profiles, submit stats, follow rankings, and bookmark athletes.</p>

    <form id="account" method="post" class="form">
      <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

      <div class="field">
        <label asp-for="Input.Email">Email</label>
        <input asp-for="Input.Email" autocomplete="username" />
        <span asp-validation-for="Input.Email" class="text-danger"></span>
      </div>

      <div class="field">
        <label asp-for="Input.Password">Password</label>
        <input asp-for="Input.Password" autocomplete="current-password" />
        <span asp-validation-for="Input.Password" class="text-danger"></span>
      </div>

      <div class="form-aux">
        <label>
          <input class="form-check-input" asp-for="Input.RememberMe" />
          @Html.DisplayNameFor(m => m.Input.RememberMe)
        </label>
        <a id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a>
      </div>

      <div class="auth-captcha">
        <partial name="~/Pages/Shared/_Captcha.cshtml" />
      </div>

      <button id="login-submit" type="submit" class="btn form-submit">Log in</button>

      <div class="auth-links" style="display:flex;gap:12px;justify-content:space-between;margin-top:10px">
        <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Create account</a>
        <a id="resend-confirmation" asp-page="./ResendEmailConfirmation">Resend confirmation</a>
      </div>
    </form>
  </div>
</section>

@section Scripts { <partial name="_ValidationScriptsPartial" /> }
