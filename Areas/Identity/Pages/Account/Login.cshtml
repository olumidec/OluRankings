@page
@model OluRankings.Areas.Identity.Pages.Account.LoginModel
@{
    ViewData["Title"] = "Log in";
}

<section class="auth-wrap">
  <div class="auth-card">
    <h1 class="auth-title">Welcome back</h1>
    <p class="auth-sub">
      Sign in to manage profiles, submit stats, follow rankings, and bookmark athletes.
    </p>

    <form id="account" method="post" class="auth-form">
      <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

      <label class="auth-field">
        <span>Email</span>
        <input asp-for="Input.Email" autocomplete="username" placeholder="you@example.com" />
        <span asp-validation-for="Input.Email" class="text-danger"></span>
      </label>

      <label class="auth-field">
        <span>Password</span>
        <input asp-for="Input.Password" autocomplete="current-password" placeholder="••••••••" />
        <span asp-validation-for="Input.Password" class="text-danger"></span>
      </label>

      <label class="auth-remember">
        <input class="form-check-input" asp-for="Input.RememberMe" />
        <span>@Html.DisplayNameFor(m => m.Input.RememberMe)</span>
      </label>

      <!-- CAPTCHA -->
      <div class="auth-captcha">
        <partial name="~/Pages/Shared/_Captcha.cshtml" />
      </div>

      <button id="login-submit" type="submit" class="auth-btn">Log in</button>

      <div class="auth-links">
        <a id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a>
        <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Create account</a>
        <a id="resend-confirmation" asp-page="./ResendEmailConfirmation">Resend confirmation</a>
      </div>
    </form>
  </div>
</section>

@section Scripts { <partial name="_ValidationScriptsPartial" /> }

<style>
  .auth-wrap{display:grid;place-items:center;min-height:70vh;padding:24px}
  .auth-card{width:100%;max-width:460px;background:var(--card,#141418);border:1px solid var(--border,#23232a);
             border-radius:16px;padding:24px}
  .auth-title{margin:0 0 6px;font-size:28px;font-weight:800}
  .auth-sub{margin:0 0 16px;color:var(--muted,#9aa3b2)}
  .auth-form{display:grid;gap:12px}
  .auth-field{display:grid;gap:6px}
  .auth-field input{padding:12px;border-radius:12px;border:1px solid var(--border,#23232a);
                    background:transparent;color:var(--fg,#f7f7f7)}
  .auth-remember{display:flex;gap:8px;align-items:center;margin:6px 0 4px}
  .auth-captcha{margin:8px 0}
  .auth-btn{width:100%;padding:12px;border-radius:12px;background:var(--brand,#7cf5a1);
            color:#0a0a0a;border:0;font-weight:700;cursor:pointer}
  .auth-links{display:flex;justify-content:space-between;gap:8px;margin-top:12px}
  .auth-links a{color:var(--muted,#9aa3b2);text-decoration:none}
  .auth-links a:hover{color:var(--fg,#f7f7f7)}
</style>
